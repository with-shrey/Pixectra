<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/selected_images_dimen"
    android:layout_height="@dimen/selected_images_dimen"
    android:layout_marginLeft="@dimen/image_cell_padding"
    android:layout_marginStart="@dimen/image_cell_padding"
    android:layout_marginTop="@dimen/image_cell_padding">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ListIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/remove"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_remove"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="0.5dp"
            app:civ_circle_background_color="@android:color/white" />

        <ProgressBar
            android:id="@+id/image_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/selected_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>